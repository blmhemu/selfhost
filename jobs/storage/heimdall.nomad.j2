job "heimdall" {
  region      = "global"
  datacenters = ["dc1"]
  type        = "service"
  update {
    healthy_deadline = "15m" # Heimdall takes some time to initialize
    progress_deadline = "20m"
  }
  group "heimdall" {
    count = 1
    network {
      port "http" {
        to = 80
      }
    }
    volume "example-seaweedfs-volume" {
      type            = "csi"
      source          = "example-seaweedfs-volume"
      access_mode     = "multi-node-multi-writer"
      attachment_mode = "file-system"
    }
    service {
      name  = "heimdall"
      port  = "http"
      tags  = [
        "traefik.enable=true",
        "traefik.http.routers.heimdall.rule=Host(`home.{{ base_domain }}`)",
      ]
      check {
        name      = "Http"
        type      = "http"
        port      = "http"
        path      = "/"
        interval  = "30s"
        timeout   = "5s"
      }
    }
    task "heimdall" {
      driver = "docker"
      config {
        image = "lscr.io/linuxserver/heimdall"
        ports = ["http"]
      }
      volume_mount {
        volume      = "example-seaweedfs-volume"
        destination = "/config"
        read_only   = false
      }
      env {
        TZ = "{{ ntp_timezone }}"
      }
      resources {
        cpu    = 200
        memory = 256
      }
    }
  }
}
